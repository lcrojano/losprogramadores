<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3366FF"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:padding="5dp"
    tools:context="com.uninorte.hackatonpresidencial.Candidatos"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="0.01"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="4dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.32"
            android:onClick="claralopez"
            android:background="@drawable/claralopez"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:layout_weight="0.10"
            android:onClick="enriquepenalosa"
            android:background="@drawable/enriquepenalosa" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="0.01"
        android:orientation="horizontal"
        android:padding="4dp" >

        <Button
            android:id="@+id/button3"
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:onClick="oscarivan"
            android:background="@drawable/oscarivan" />

        <Button
            android:id="@+id/button7"
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="martaluciaramirez"
            android:background="@drawable/martaluciaramirez" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="192dp"
        android:layout_height="164dp"
        android:orientation="horizontal" 
        android:padding="4dp">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:onClick="juansanto"
            android:background="@drawable/juansanto"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/siguiente" />
    </LinearLayout>

</LinearLayout>